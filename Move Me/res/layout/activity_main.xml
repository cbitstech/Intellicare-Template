<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_main"
        android:contentDescription="" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="16dp"
	        android:background="#80000000" />
	    <LinearLayout android:orientation="horizontal"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
		    <TextView android:id="@+id/button_dashboard"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" 
		        android:text="@string/action_dashboard"
		        android:textSize="32sp"
		        android:textStyle="bold"
		        android:singleLine="false" 
		        android:gravity="bottom|right"
		        android:paddingLeft="8dp" 
		        android:paddingRight="16dp" 
		        android:paddingTop="8dp" 
		        android:paddingBottom="8dp" 
		        android:textColor="#ffffff"
		        android:shadowColor="#000000"
		        android:shadowRadius="10" />
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
   	    </LinearLayout>
  	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="16dp"
	        android:background="#80000000" />
	    <LinearLayout android:orientation="horizontal"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
		    <TextView android:id="@+id/button_move_me"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" 
		        android:text="@string/action_move_me"
		        android:textSize="32sp"
		        android:textStyle="bold"
		        android:singleLine="false" 
		        android:gravity="bottom|right"
		        android:paddingLeft="8dp" 
		        android:paddingRight="16dp" 
		        android:paddingTop="8dp" 
		        android:paddingBottom="8dp" 
		        android:textColor="#ffffff"
		        android:shadowColor="#000000"
		        android:shadowRadius="10" />
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
   	    </LinearLayout>
   	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="16dp"
	        android:background="#80000000" />
	    <LinearLayout android:orientation="horizontal"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
		    <TextView android:id="@+id/button_timer"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1" 
		        android:text="@string/action_timer"
		        android:textSize="32sp"
		        android:textStyle="bold"
		        android:singleLine="false" 
		        android:gravity="bottom|right"
		        android:paddingLeft="8dp" 
		        android:paddingRight="16dp" 
		        android:paddingTop="8dp" 
		        android:paddingBottom="8dp" 
		        android:textColor="#ffffff"
		        android:shadowColor="#000000"
		        android:shadowRadius="10" />
		    <View 
		        android:layout_width="16dp"
		        android:layout_height="match_parent"
		        android:background="#80000000" />
   	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="16dp"
	        android:background="#80000000" />
	</LinearLayout>
</FrameLayout>
