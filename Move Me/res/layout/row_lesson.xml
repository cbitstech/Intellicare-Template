<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/lesson_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:background="#323335"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textStyle="bold" 
        android:padding="8dp"/>
    <LinearLayout android:id="@+id/lesson_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	   	<TextView android:id="@+id/lesson_name"
	   	    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
			android:layout_gravity="center_vertical"		    
		    android:textSize="18sp"
		    android:padding="8dp"
		    android:text="" />
	   	<ImageView android:id="@+id/lesson_icon"
	   	    android:src="@drawable/ic_action_bookmark" 
	   	    android:layout_width="48dp"
	   	    android:layout_height="48dp"
	   	    android:padding="8dp"
	   	    android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>    