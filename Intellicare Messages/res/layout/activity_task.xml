<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<WebView android:id="@+id/web_view" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	</WebView>
    <View android:layout_width="match_parent"
        android:background="#808080"
        android:layout_height="1dp" />
    <TextView android:id="@+id/desc_rating"
        android:text="@string/task_rating"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="8dp" />
    <edu.northwestern.cbits.intellicare.views.StarRatingView 
        android:id="@+id/star_rating_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <TextView android:text="@string/terrible_rating"
	        android:textSize="14sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    <View android:layout_width="0dp"
	        android:layout_height="5dp"
	        android:layout_weight="1" />
	    <TextView android:text="@string/great_rating"
	        android:textSize="14sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

