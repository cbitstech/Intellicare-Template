<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/one_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_star_0" />
    <View android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />
    <ImageView android:id="@+id/two_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_star_0" />
    <View android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />
    <ImageView android:id="@+id/three_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_star_0" />
    <View android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />
    <ImageView android:id="@+id/four_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_star_0" />
    <View android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />
    <ImageView android:id="@+id/five_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_star_0" />
</LinearLayout>
