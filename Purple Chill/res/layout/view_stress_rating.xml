<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp">
	<TextView android:id="@+id/rating_number"
		android:textStyle="bold"
		android:textSize="72sp"
		android:text="@string/step_rate_stress_default"
		android:gravity="center"
		android:layout_margin="8dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
    <SeekBar android:id="@+id/stress_rating"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="8dp">
		<TextView android:textSize="12sp"
			android:text="@string/step_rate_stress_less"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<View android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent" />
		<TextView android:textSize="12sp"
			android:text="@string/step_rate_stress_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginRight="8dp" />
	</LinearLayout>
</LinearLayout>
