<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_gray"
    android:orientation="vertical">
    <ListView android:id="@+id/recording_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View android:background="@color/bottom_bar_border"
        android:layout_width="match_parent"
        android:layout_height="1.5dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
	    <TextView android:text="[Audio Title]"
	        android:textStyle="bold"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content" />
	    <TextView android:text="(12:34 / 56:78)"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
    </LinearLayout>
	<ProgressBar android:id="@+id/playback_progress"
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <View android:layout_width="0dp"
            android:layout_height="1dp" 
            android:layout_weight="1" />
        <ImageButton android:id="@+id/previous_track"
            android:src="@drawable/ic_action_playback_prev"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <ImageButton android:id="@+id/play_pause"
            android:src="@drawable/ic_action_playback_play"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <ImageButton android:id="@+id/next_track"
            android:src="@drawable/ic_action_playback_next"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <View android:layout_width="0dp"
            android:layout_height="1dp" 
            android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>