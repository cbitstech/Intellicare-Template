<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_gray"
    android:orientation="vertical">
    <TextView android:text="@string/step_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="8dp" />
	<View android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">
		    <TextView android:textStyle="bold"
		        android:textSize="18sp"
		        android:text="@string/step_choose_explain"
		        android:layout_height="wrap_content" 
		        android:layout_width="match_parent" />
		    <TextView android:id="@+id/label_selected_track_title"
		        android:textStyle="italic"
		        android:textSize="18sp"
		        android:text="@string/step_choose_track"
		        android:layout_height="wrap_content" 
		        android:layout_width="match_parent" />
	    </LinearLayout>
	    <ImageButton android:id="@+id/choose_track"
            android:src="@drawable/ic_action_music_1"
            android:contentDescription="@string/goto_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp" />
	</LinearLayout>
	<View android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
		<LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp">
			<TextView android:textStyle="bold"
			    android:textSize="18sp"
		        android:text="@string/step_rate_stress"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		  	<SeekBar android:id="@+id/stress_rating"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		    <LinearLayout android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">
				<TextView android:textSize="12sp"
			        android:text="@string/step_rate_stress_less"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" />
				<View android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" />
				<TextView android:textSize="12sp"
			        android:text="@string/step_rate_stress_more"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_marginRight="8dp" />
	        </LinearLayout>
	    </LinearLayout>
		<TextView android:id="@+id/rating_number"
		    android:textStyle="bold"
		    android:textSize="36sp"
	        android:text="@string/step_rate_stress_default"
	        android:gravity="center"
	        android:layout_width="44sp"
	        android:layout_height="match_parent" />
    </LinearLayout>
	<View android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
<!-- 	<LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">
 -->        
		    <TextView android:textStyle="bold"
		        android:textSize="18sp"
		        android:text="@string/step_play_track"
		        android:layout_height="wrap_content" 
		        android:layout_width="match_parent" />
			<View android:id="@+id/player_anchor"
			    android:layout_weight="1"
			    android:background="#808080"
			    android:layout_width="match_parent"
			    android:layout_height="80dp" />
		<!-- 
			    <LinearLayout android:orientation="horizontal"
		        android:layout_width="match_parent"
				android:layout_marginTop="8dp" 
		        android:layout_height="wrap_content">
		    	<ProgressBar android:id="@+id/playback_progress"
		    	    style="@android:style/Widget.ProgressBar.Horizontal"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_marginRight="8dp" 
					android:layout_height="wrap_content" />
			    <TextView android:id="@+id/track_progress"
			        android:textSize="12sp"
			        android:text="@string/track_timestamp"
			        android:layout_height="match_parent" 
			        android:layout_width="wrap_content"
			        android:gravity="center"
			        android:layout_marginRight="8dp" />
	    	</LinearLayout>
  	    </LinearLayout>
         -->
