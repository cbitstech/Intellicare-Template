<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_gray"
    android:id="@+id/layout_player"
    android:orientation="vertical">
	<ListView android:id="@+id/recording_list"
	    android:layout_weight="1" 
		android:background="#ffffff"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" /> 
    <View android:background="@color/bottom_bar_border"
        android:layout_width="match_parent"
        android:layout_height="1.5dp" 
        android:layout_marginBottom="8dp" />
	<TextView android:textStyle="bold"
	    android:textSize="18sp"
        android:text="@string/step_rate_stress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
	<LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="120dp">
		<LinearLayout android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_weight="1"
			android:layout_gravity="center_vertical"
	        android:layout_height="match_parent">
	        <View android:layout_weight="1"
	            android:layout_width="match_parent"
	            android:layout_height="0dp" />
  			<SeekBar android:id="@+id/stress_rating"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<LinearLayout android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
				<TextView android:textSize="12sp"
					android:text="@string/step_rate_stress_less"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<View android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" />
				<TextView android:textSize="12sp"
					android:text="@string/step_rate_stress_more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_marginRight="8dp" />
			</LinearLayout>
	    </LinearLayout>
		<TextView android:id="@+id/rating_number"
			android:textStyle="bold"
			android:textSize="36sp"
			android:text="@string/step_rate_stress_default"
			android:gravity="center"
			android:layout_width="64dp"
			android:layout_height="match_parent" />
	</LinearLayout>
</LinearLayout>