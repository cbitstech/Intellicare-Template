<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
    package="edu.northwestern.cbits.intellicare.relax" 
    android:versionCode="11000" android:versionName="1.1.0" >
   	<uses-permission android:name="android.permission.INTERNET" />
   	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
   	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19" />
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
		<receiver android:name="edu.northwestern.cbits.intellicare.relax.ScheduleHelper">
		    <intent-filter>
		        <action android:name="android.intent.action.BOOT_COMPLETED"/>
		    </intent-filter>
		</receiver>
        <activity android:theme="@style/Theme.AppCompat.Light"
            android:name=".IndexActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			<intent-filter>
		        <action android:name="android.intent.action.VIEW" />
        	    <category android:name="android.intent.category.DEFAULT" />
            	<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="intellicare" android:host="purple-chill" android:pathPrefix="/reminder" />
			</intent-filter>
        </activity>
        <activity android:theme="@style/Theme.AppCompat.Light" 
            android:name=".PlayerActivity" 
            android:label="@string/app_name" 
            android:launchMode="singleTop">
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value=".IndexActivity" />
   		</activity>
        <service android:enabled="true" android:name=".AudioService" android:exported="false">
			<intent-filter>
				<action android:name="purple_chill_toggle_playback" />
            </intent-filter>
        </service>
        <service android:enabled="true" android:name=".MonitorService" android:exported="false" />
   		<activity android:theme="@style/Theme.AppCompat.Light" android:name=".DownloadActivity" android:label="@string/app_name" />
   		<activity android:theme="@style/Theme.AppCompat.Light" android:name=".HelpActivity" android:label="@string/app_name" />
   		<activity android:theme="@style/Theme.AppCompat.Light" android:name=".HtmlActivity" android:label="@string/app_name" />
		<activity android:theme="@style/Theme.AppCompat.Light" android:name=".IntroActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name=".GroupActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name=".SettingsActivity" android:label="@string/app_name" />
		<activity android:theme="@style/Theme.AppCompat.Light" android:name="edu.northwestern.cbits.intellicare.FaqActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name="edu.northwestern.cbits.intellicare.ConsentActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name="edu.northwestern.cbits.intellicare.RecruitmentActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name="edu.northwestern.cbits.intellicare.MotivationActivity" android:label="@string/app_name" />
        <activity android:theme="@style/Theme.AppCompat.Light" android:name="edu.northwestern.cbits.intellicare.DemographicActivity" android:label="@string/app_name" />
   		<activity android:name="net.hockeyapp.android.UpdateActivity" />
    </application>
</manifest>
