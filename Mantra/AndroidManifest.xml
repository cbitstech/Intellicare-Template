<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.northwestern.cbits.intellicare.mantra"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CollectCameraActivity"
            android:label="@string/collect_camera_label" >
        </activity>
        <activity
            android:name=".activities.NewMantraActivity"
            android:label="@string/new_mantra_label" >
        </activity>
        <activity
            android:name=".activities.BrowsePhotosActivity"
            android:label="@string/browse_photos_label" >
        </activity>
        <activity
            android:name=".activities.NewFocusBoardActivity"
            android:label="@string/new_focus_board_label" >
        </activity>
        <activity
            android:name=".activities.FocusBoardListActivity"
            android:label="@string/focus_board_list_label" >
        </activity>
        <activity
            android:name=".activities.FocusBoardActivity"
            android:label="@string/focus_board_label"
            android:parentActivityName=".activities.HomeActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
    </application>

</manifest>