<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/completion_streak_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >


        <TextView
            android:id="@+id/completion_streak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:textSize="40sp"
            android:textAlignment="center"
            android:text="@string/completion_streak_placeholder"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Days Completion Streak"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminder_time_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:textSize="25sp"
            android:text="Next Reminder: "
            />

        <Button
            android:id="@+id/reminder_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="8:30pm"
            android:onClick="showTimePickerDialog"
            >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feats_of_strength_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/most_recent_feat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            style="?android:listSeparatorTextViewStyle"

            android:textAlignment="center"
            android:text="Most Recently..."

            />

        <TextView
            android:id="@+id/most_recent_feat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/most_recent_feat_placeholder"

            />

        <Button
            android:id="@+id/all_strength_feats_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"

            android:text="@string/all_strength_feats_text"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_feats_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="?android:listSeparatorTextViewStyle"
        >


        <TextView
            android:id="@+id/feats_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:textSize="40sp"
            android:textAlignment="center"
            android:text="170"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Total Daily Feats"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/show_feats_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >
    </ListView>

</LinearLayout>