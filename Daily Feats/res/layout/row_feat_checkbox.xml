<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/label_category_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#323335">
	    <TextView android:id="@+id/label_category_name"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:textStyle="bold" 
	        android:padding="8dp"/>
	    <TextView android:id="@+id/label_category_level"
	        android:text="@string/label_current_level"
	        android:visibility="gone"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:singleLine="true"
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:textStyle="bold" 
	        android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:baselineAligned="false">"
	   	<CheckBox android:id="@+id/feat_checkbox"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:textSize="18sp"
		    android:padding="8dp"
		    android:text="@string/feat_placeholder" />
	   	<ImageView android:id="@+id/icon_recommended"
	   	    android:src="@drawable/ic_action_like"
	   	    android:layout_height="36dp"
	   	    android:layout_width="36dp"
	   	    android:layout_marginRight="4dp" 
	   	    android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
    