<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.northwestern.cbits.intellicare.conductor"
    android:versionCode="10007"
    android:versionName="1.0.7" >
