<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:padding="8dp">
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    	<TextView
        	android:id="@+id/label_contact_name"
        	android:layout_width="match_parent"
       	 	android:layout_height="wrap_content"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
    	<TextView
        	android:id="@+id/label_contact_number"
        	android:layout_width="match_parent"
       	 	android:layout_height="wrap_content"
        	android:textAppearance="?android:attr/textAppearanceSmall" />
   	</LinearLayout>
   	<View android:layout_width="0dp"
   	    android:layout_height="1dp"
   	    android:layout_weight="1" />
    <ImageView android:id="@+id/practical_item"
        android:layout_width="24dp"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:gravity="center_vertical" 
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp" />
    <ImageView android:id="@+id/advice_item"
        android:layout_width="24dp"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:gravity="center_vertical" 
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp" />
    <ImageView android:id="@+id/companion_item"
        android:layout_width="24dp"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:gravity="center_vertical" 
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp" />
    <ImageView android:id="@+id/emotional_item"
        android:layout_width="24dp"
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:gravity="center_vertical" 
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp" />
</LinearLayout>