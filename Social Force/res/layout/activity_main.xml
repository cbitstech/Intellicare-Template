<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:background="#ff000000"
    android:layout_height="fill_parent">
    <WebView android:id="@+id/network_visualization"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" />
	<RadioGroup android:id="@+id/radio_user_states" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="4dp"
	    android:layout_gravity="bottom">
	    <RadioButton android:id="@+id/button_lonely"
	        android:layout_height="48dp"
	        android:layout_width="match_parent"
	        android:textSize="18sp"
	        android:layout_marginTop="0dp"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
	        android:layout_marginBottom="2dp"
	        android:background="@drawable/card_background"
	        android:drawableRight="@drawable/ic_action_emo_cry"
	        android:text="@string/button_lonely" />
	    <RadioButton android:id="@+id/button_bored"
	        android:layout_height="48dp"
	        android:layout_width="match_parent"
	        android:textSize="18sp"
	        android:layout_margin="2dp"
	        android:background="@drawable/card_background"
	        android:drawableRight="@drawable/ic_action_emo_err"
	        android:text="@string/button_bored" />
	    <RadioButton android:id="@+id/button_help"
	        android:layout_height="48dp"
	        android:textSize="18sp"
	        android:layout_margin="2dp"
	        android:background="@drawable/card_background"
	        android:drawableRight="@drawable/ic_action_emo_wonder"
	        android:layout_width="match_parent"
	        android:text="@string/button_help" />
	    <RadioButton android:id="@+id/button_advice"
	        android:layout_height="48dp"
	        android:textSize="18sp"
	        android:layout_margin="2dp"
	        android:background="@drawable/card_background"
	        android:drawableRight="@drawable/ic_action_emo_shame"
	        android:layout_width="match_parent"
	        android:text="@string/button_advice" />
	    <RadioButton android:id="@+id/button_happy"
	        android:layout_height="48dp"
	        android:textSize="18sp"
	        android:layout_margin="2dp"
	        android:background="@drawable/card_background"
	        android:drawableRight="@drawable/ic_action_emo_basic"
	        android:layout_width="match_parent"
	        android:text="@string/button_happy" />
	</RadioGroup>
</FrameLayout>