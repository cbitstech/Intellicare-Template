<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:id="@+id/settings_root">
    <LinearLayout android:orientation="vertical" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:text="aCtive bRightNess"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar android:id="@+id/active_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:text="resting bRightNess"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar android:id="@+id/rest_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:text="dIm DELay"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar android:id="@+id/dim_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox android:id="@+id/dark_dim"
            android:text="dim wHen DArK"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
